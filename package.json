{
  "name": "gamelauncher",
  "version": "1.0.0",
  "description": "Reizo Game Launcher",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Reizo",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "standard": "^17.1.2"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "electron-squirrel-startup": "^1.0.1",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.reizo.launcher",
    "productName": "Reizo Game Launcher",
    "copyright": "2025 Reizo",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": "squirrel",
      "icon": "img/installer.ico",
      "artifactName": "REIZO_GAME_LAUNCHER.${ext}"
    },
    "squirrelWindows": {
      "loadingGif": "img/installer_bg.png",
			"iconUrl": "http://localhost/patcher/icon/metin2.ico"
    },
		"afterPack": "scripts/cleanInstall.js",
    "publish": null,
		"files": [
      "**/*",
      "!build",
      "!dist",
      "!out",
      "!node_modules/@electron-builder"
    ]
  }
}
